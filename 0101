create table MYEMPLOYEE (EMPLOYEEID INT,FIRSTNAME VARCHAR(20),LASTNAME VARCHAR(20))
INSERT INTO MYEMPLOYEE VALUES (1,'MICHAEL', 'sCOTT')
INSERT INTO MYEMPLOYEE VALUES (2,'PAM', 'Beesly')
